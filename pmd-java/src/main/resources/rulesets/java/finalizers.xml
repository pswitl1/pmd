<?xml version="1.0"?>

<ruleset name="Finalizer"
    xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

  <description>
These rules deal with different problems that can occur with finalizers.
  </description>

    <!-- Rules, that have been moved into a category -->
    <rule ref="java-errorprone/AvoidCallingFinalize" deprecated="true" />
    <rule ref="java-errorprone/EmptyFinalizer" deprecated="true" />
    <rule ref="java-errorprone/FinalizeDoesNotCallSuperFinalize" deprecated="true" />
    <rule ref="java-errorprone/FinalizeOnlyCallsSuperFinalize" deprecated="true" />
    <rule ref="java-errorprone/FinalizeOverloaded" deprecated="true" />
    <rule ref="java-errorprone/FinalizeShouldBeProtected" deprecated="true" />

</ruleset>