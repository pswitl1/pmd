<?xml version="1.0"?>

<ruleset name="JUnit"
    xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">
  <description>
These rules deal with different problems that can occur with JUnit tests.
  </description>

    <!-- Rules, that have been moved into a category -->
    <rule ref="java-errorprone/JUnitSpelling" deprecated="true" />
    <rule ref="java-errorprone/JUnitStaticSuite" deprecated="true" />
    <rule ref="java-errorprone/TestClassWithoutTestCases" deprecated="true" />
    <rule ref="java-errorprone/UnnecessaryBooleanAssertion" deprecated="true" />
    <rule ref="java-errorprone/UseAssertEqualsInsteadOfAssertTrue" deprecated="true" />
    <rule ref="java-errorprone/UseAssertNullInsteadOfAssertTrue" deprecated="true" />
    <rule ref="java-errorprone/UseAssertSameInsteadOfAssertTrue" deprecated="true" />
    <rule ref="java-errorprone/UseAssertTrueInsteadOfAssertEquals" deprecated="true" />

    <rule ref="java-bestpractices/JUnitAssertionsShouldIncludeMessage" deprecated="true" />
    <rule ref="java-bestpractices/JUnitTestContainsTooManyAsserts" deprecated="true" />
    <rule ref="java-bestpractices/JUnitTestsShouldIncludeAssert" deprecated="true" />

    <rule ref="java-design/SimplifyBooleanAssertion" deprecated="true" />
</ruleset>
