<?xml version="1.0"?>

<ruleset name="String and StringBuffer"
    xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">
  <description>
These rules deal with different issues that can arise with manipulation of the String, StringBuffer, or StringBuilder instances.
  </description>

    <!-- Rules, that have been moved into a category -->
    <rule ref="java-errorprone/AvoidDuplicateLiterals" deprecated="true" />
    <rule ref="java-errorprone/StringBufferInstantiationWithChar" deprecated="true" />
    <rule ref="java-errorprone/UnnecessaryCaseChange" deprecated="true" />
    <rule ref="java-errorprone/UseEqualsToCompareStrings" deprecated="true" />

    <rule ref="java-bestpractices/AvoidStringBufferField" deprecated="true" />

    <rule ref="java-performance/AppendCharacterWithChar" deprecated="true" />
    <rule ref="java-performance/ConsecutiveAppendsShouldReuse" deprecated="true" />
    <rule ref="java-performance/ConsecutiveLiteralAppends" deprecated="true" />
    <rule ref="java-performance/InefficientEmptyStringCheck" deprecated="true" />
    <rule ref="java-performance/InefficientStringBuffering" deprecated="true" />
    <rule ref="java-performance/InsufficientStringBufferDeclaration" deprecated="true" />
    <rule ref="java-performance/StringInstantiation" deprecated="true" />
    <rule ref="java-performance/StringToString" deprecated="true" />
    <rule ref="java-performance/UseIndexOfChar" deprecated="true" />
    <rule ref="java-performance/UselessStringValueOf" deprecated="true" />
    <rule ref="java-performance/UseStringBufferLength" deprecated="true" />

</ruleset>
