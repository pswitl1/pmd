<?xml version="1.0"?>

<ruleset name="Metrics testing ruleset"
         xmlns="http://pmd.sourceforge.net/ruleset/3.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/3.0.0 http://pmd.sourceforge.net/ruleset_3_0_0.xsd">

    <description>
        Metrics testing ruleset.
    </description>

    <rule name="CyclomaticComplexity"
          message = "''{0}'' has value {1}."
          class="net.sourceforge.pmd.lang.java.oom.metrics.CycloTestRule"
          metrics="true">
    </rule>
</ruleset>
