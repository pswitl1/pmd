<?xml version="1.0" encoding="UTF-8"?>
<test-data>
    <test-code>
        <description>Failure case, returning literal</description>
        <expected-problems>1</expected-problems>
        <code><![CDATA[
        public class Foo {
          int bar() {
            String a = ((String) "foo");
          }
        }
        ]]></code>
    </test-code>

    <test-code>
        <description>bad, returning variable in parens</description>
        <expected-problems>1</expected-problems>
        <code><![CDATA[
        public class Foo {
          int bar(int y) {
            return (y);
          }
        }
        ]]></code>
    </test-code>

    <test-code>
        <description>Typecast</description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
        public class Foo {
          public void bar(Object o) {
            return ((Exception) o).getMessage();
          }
        }
        ]]></code>
    </test-code>

    <test-code>
        <description>#537 Trivial case with additive expression</description>
        <expected-problems>1</expected-problems>
        <code><![CDATA[
          public class Foo {
            private String getData(final String header) {
              String result = ("[" + header + ":" + Utils.decode(header) + "]");
              return result;
            }
          }
         ]]></code>
    </test-code>

    <test-code>
        <description>Parentheses around cast</description>
        <expected-problems>1</expected-problems>
        <code><![CDATA[
        public class Foo {
          public void bar(Object o) {
            return ((String) "doo");
          }
        }
        ]]></code>
    </test-code>

    <test-code>
        <description>Parentheses around call chain</description>
        <expected-problems>1</expected-problems>
        <code><![CDATA[
        public class Foo {
          public void bar(Object o) {
             return (a.bar()).foo();
          }
        }
        ]]></code>
    </test-code>

    <test-code>
        <description>Unreported call chain</description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
        public class Foo {
          public void bar(Object o) {
             return a.bar().foo();
          }
        }
        ]]></code>
    </test-code>

</test-data>
